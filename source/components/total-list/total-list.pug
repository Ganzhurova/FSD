include ../control/control
include ../total/total

mixin totalList(options={})
  .total-list.js-total-list
    ul.total-list__items
      each item, key in options.list 
        if key !== "common"
          +totalListItem(item, key)
    if options.control
      .total-list__control 
        +control

mixin totalListItem(item, key)
  -
    const total = {attributes: {
      name: key,
      value: item.value | 0
    }}

  li.total-list__item.js-item
    span.total-list__option= item.text
    .total-list__number 
      +total(total)
