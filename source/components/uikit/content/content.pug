mixin content(name)
  main
    section.content
      .content__wrapper(class=name ? `content__wrapper_${name}` : "")
        if (h1)
          h1.content__title= h1
        else
          h1.visually-hidden= pageTitle
        block

mixin contentSection({name, row, mix})
  - let classes = [];

  if name
    - classes.push(`content__section_${name}`);

  if row
    - classes.push("content__section_row");

  if mix
    - classes.push(`content__section_${mix}`);

  .content__section(class=classes)
    block
