mixin chart(mix)
  figure.chart(class=mix)
    .chart__body
      svg.chart__svg(width="100%" height="100%" viewBox="0 0 32.8 32.8")
        title Диаграмма
        desc Круговая диаграмма, показывает впечатления от номера
        circle.chart__unit(r="15.9" cx="50%" cy="50%")
        circle.chart__unit(r="15.9" cx="50%" cy="50%")
        circle.chart__unit(r="15.9" cx="50%" cy="50%")
        circle.chart__unit(r="15.9" cx="50%" cy="50%")
        g.chart__total
          text.chart__total-number(x="50%" y="50%") 260
          text.chart__total-text(x="50%" y="50%") голосов
    figcaption.chart__legend
      ul.chart__list(aria-hidden="true")
        li.chart__item
          span.chart__marker.chart__marker--sumptuously
          |Великолепно
        li.chart__item
          span.chart__marker.chart__marker--good
          |Хорошо
        li.chart__item
          span.chart__marker.chart__marker--fine
          |Удовлетворительно
        li.chart__item
          span.chart__marker.chart__marker--badly
          |Разочарован
