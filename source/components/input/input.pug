mixin input(options)
  if !options
    - options = {}

  - let classes = []

  if options.isDateMask
    - classes.push("js-input-date-mask")
    - attributes.type = "text"
    - attributes.placeholder = "ДД.ММ.ГГГГ"

  if options.isDatepicker
    - classes.push("datepicker-here")
    - attributes.type = "text"

  input(
    class = classes
    id = options.id
    )&attributes(attributes)
