mixin buttonIcon(name)
  i.material-icons= name

mixin button(options)
  if !options
    - options = {}

  - let classes = []

    if options.iconName
      - classes.push("button--material-icons")

    if options.mix
      - classes.push(options.mix)


  button.button(
    class=classes
    type=options.type
    )
    block
    if(options.iconName)
      +buttonIcon(options.iconName)
