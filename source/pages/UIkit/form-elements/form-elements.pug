extends ../../base/base-uikit.pug

include ../../../components/UIkit/content/content
include ../../../components/UIkit/form-element/form-element
include ../../../components/text-field/text-field
include ../../../components/dropdown/dropdown
include ../../../components/date-dropdown/date-dropdown
include ../../../components/subscription-field/subscription-field
include ../../../components/like/like
include ../../../components/rating/rating
include ../../../components/range/range
include ../../../components/pagination/pagination
include ../../../components/checkbox/checkbox
include ../../../components/radio/radio
include ../../../components/toggle/toggle
include ../../../components/check-list/check-list
include ../../../components/bullet-list/bullet-list
include ../../../components/features/features
include ../../../components/review/review

block variables
  - let pageTitle = "Form elements"
  - let name = "form-elements"

block content
  +content(name)
    +contentSection({...{}, name})
      +formElement({title: "Text Field", state: "Default", mb: 20,})
        +textField({
          label: "Email",
          attributes: {
            type: "email",
            placeholder: "Email",
          }
          })
      +formElement({title: "Text Field", state: "Hover / Focus", mb: 20,})
        +textField({
          label: "Text",
          attributes: {
            type: "text",
            placeholder: "Text",
            value: "This is pretty awesome",
          }
          })
      +formElement({mb: 22.56,})
        +dropdown({
          label: "Dropdown",
          labelVisually: true,
          isGuestsDropdown: true
          })
      +formElement({mb: 40,})
        +textField({
          label: "Masked text field",
          labelVisually: true,
          isDateMask: true
          })
      +formElement({mb: 41, mix: "date-dropdown"})
        +dateDropdown({
          mode: "range",
          from: {label: "Date Dropdown",},
          to: {
            label: "Date Dropdown",
            attributes: {
              value: "19.08.2019"
              }
            },
          })
      +formElement({mb: 41, mix: "filter-date-dropdown"})
        +dateDropdown({
          mode: "filter",
          filter: {
            label: "Filter date dropdown",
            },
          })
      +formElement({title: "Subscription text field", mb: 100,})
        +subscriptionField()


    +contentSection({...{}, name})
      +formElement({title: "Checkbox buttons", categoryMb: 16.56, mb: 40.88, mix: "checkbox"})
        +checkbox({
          text: "Можно курить",
          attributes: {
            name: "smoke",
          }
        })
        +checkbox({
          text: "Можно с питомцами",
          attributes: {
            name: "pet",
            checked: true,
          }
        })
        +checkbox({
          text: "Можно пригласить гостей <br>(до 10 человек)",
          attributes: {
            name: "guests",
            checked: true,
          }
        })
      +formElement({title: "Radio Buttons", categoryMb: 16, mb: 40.56, mix: "radio"})
        +radio({
          text: "Мужчина",
          attributes: {
            name: "gender",
            value: "man",
            checked: true,
          }
          })
        +radio({
          text: "Женщина",
          attributes: {
            name: "gender",
            value: "woman",
          }
          })
      +formElement({title: "Toggle", categoryMb: 16, mb: 44.44, mix: "toggle"})
        +toggle({
          text: "Получать спецпредложения",
          attributes: {
            name: "offer",
            checked: true,
          }
          })
        +toggle({
          text: "Получать спецпредложения",
          attributes: {
            name: "offer",
          }
          })
      +formElement({title: "Like button", categoryMb: 16, mb: 40, mix: "like"})
        +like(2, false)
        +like(12, true)
      +formElement({title: "Rate button", categoryMb: 16, mb: 40, mix: "rate"})
        +rating(4)
        +rating(5)

    +contentSection({...{}, name})
      +formElement({mb: 43.56})
        +range("Range slider")
      +formElement({title: "Buttons", categoryMb: 16, mb: 41, mix: "buttons"})
        +button({
          type: "button",
          buttonMod: "colored",
          desc: "Click me"
          })
        +button({
          type: "button",
          buttonMod: "bordered",
          desc: "Click me"
          })
        +button({
          type: "button",
          buttonMod: "text",
          desc: "Click me"
          })
        +button({
          type: "button",
          buttonMod: "with-arrow",
          desc: "Перейти к оплате"
          })
      +formElement({title: "Pagination", categoryMb: 16.44, mb: 40})
        +pagination()

    +contentSection({...{}, name})
      +formElement({title: "Dropdown", state: "Default", mb: 20,})
        +dropdown({
          isComfortDropdown: true,
          })
      +formElement({title: "Dropdown", state: "Expanded", categoryMb: 4.56, mb: 158.44})
        +dropdown({
          isComfortDropdown: true,
          dataShow: "true",
          })

    +contentSection({...{row: true}, name})
      +formElement()
        +dropdown({
          label: "Dropdown",
          labelVisually: true,
          isGuestsDropdown: true,
          dataShow: "true",
          })
      +formElement()
        +dropdown({
          label: "Dropdown",
          labelVisually: true,
          isGuestsDropdown: true,
          dataShow: "true",
          })

    +contentSection({...{}, name})
      +formElement({mix: "check-list", mb: 274})
        +checkList("Expandable checkbox list", "additionalAmenities")
        +checkList("Expandable checkbox list", "additionalAmenities", true)

    +contentSection({...{row: true}, name})
      +formElement({title: "Rich checkbox buttons", categoryMb: 16, mix: "rich-checkbox"})
        +checkbox({
          title: "Широкий коридор",
          text: "Ширина коридоров в номере<br> не менее 91 см.",
          attributes: {
            name: "accessibility-corridor",
          }
          })
        +checkbox({
          title: "Помощник для инвалидов",
          text: "На 1 этаже вас встретит специалист<br> и проводит до номера.",
          attributes: {
            name: "accessibility-helper",
          }
          })
      +formElement({title: "Bullet list", categoryMb: 16,})
        +bulletList("rules")

    +contentSection({...{row: true}, name})
      +formElement()
        +features("featuresUikit")
      +formElement()
        +review({
          name: "Мурад Сарафанов",
          img: "image.png",
          date: "5 дней назад",
          like: {
            count: 12,
            isChecked: true,
          },
          text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.",
          })
