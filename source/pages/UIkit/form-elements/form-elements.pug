extends ../../base/base-uikit.pug

include ../../../components/UIkit/content/content
include ../../../components/UIkit/form-element/form-element
include ../../../components/input/input
include ../../../components/field-submit/field-submit

block variables
  - var pageTitle = "Form elements"

block content
  +content()
    +contentSection({page: "form-elements"})
      +formElement({
        title: "Text Field",
        state: "Default"
        })
        +input({
          type: "email",
          placeholder: "Email",
          })
      +formElement({
        title: "Text Field",
        state: "Hover / Focus"
        })
        +input({
          type: "text",
          placeholder: "Text",
          value: "This is pretty awesome",
          autofocus: "autofocus"
          })
      +formElement({title: "Dropdown"})
        +input({
          type: "email",
          placeholder: "Dropdown",
          })
      +formElement({title: "Masked text field"})
        +input({dateMask: true})
      +formElement({
        title: "Subscription text field",
        width: "medium"
        })
        +fieldSubmit()
