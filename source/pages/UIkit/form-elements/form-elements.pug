extends ../../base/base-uikit.pug

include ../../../components/UIkit/content/content
include ../../../components/UIkit/form-element/form-element
include ../../../components/input/input

block variables
  - var pageTitle = "Form elements"

block content
  +content()
    +contentSection({page: "form-elements"})
      +formElement("Text Field", "Default")
        +input({
          name: "email",
          type: "email",
          placeholder: "Email",
          })
      +formElement("Text Field", "Hover / Focus")
        +input({
          name: "text",
          type: "text",
          placeholder: "Text",
          value: "This is pretty awesome",
          autofocus: "autofocus"
          })
      +formElement("Dropdown")
        +input({
          name: "email",
          type: "email",
          placeholder: "Dropdown",
          })
      +formElement("masked text field")
        +input({
          name: "mask",
          type: "text",
          pattern: "(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}"
          })
