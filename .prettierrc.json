{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "*.pug",
      "options": {
        "pugSingleQuote": false,
        "pugPrintWidth": 80,
        "pugWrapAttributesThreshold": 3
      }
    }
  ]
}
